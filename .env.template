# Kraken Pro Trading CLI Environment Configuration (2025 API Compliant)
# Copy this file to .env and fill in your actual API credentials

# Kraken API Configuration (2025 Updated)
# Get these from: https://www.kraken.com/u/settings/api
KRAKEN_API_KEY=your_api_key_here
KRAKEN_API_SECRET=your_api_secret_here

# Environment Setting
# Note: Sandbox is controlled by API key permissions
# Base URL is always https://api.kraken.com (2025 API)
KRAKEN_SANDBOX=false

# API Rate Limiting (Updated for 2025 API)
# Public endpoints: 1 req/sec, Private endpoints: 15-20 req/min
KRAKEN_RATE_LIMIT=1

# Logging Level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Auto Trading Configuration
# Enable automated trading engine (true/false)
AUTO_TRADING_ENABLED=false

# Path to auto trading YAML configuration file
AUTO_TRADING_CONFIG_PATH=./configs/auto_trading.yaml

# Alerting configuration (optional)
ALERT_WEBHOOK_URL=
ALERT_EMAIL_SENDER=
ALERT_EMAIL_RECIPIENTS=
ALERT_EMAIL_SMTP_SERVER=
ALERT_EMAIL_SMTP_PORT=587
ALERT_EMAIL_SMTP_USERNAME=
ALERT_EMAIL_SMTP_PASSWORD=
